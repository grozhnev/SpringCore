    <bean id="app" class="App" c:client-ref="client" c:logger-ref="consoleLogger"/>

    <!--<bean id="app" class="App" c:client-ref="client">-->
        <!--<constructor-arg ref="loggersMap"/>-->
    <!--</bean>-->
    <bean id="app2" class="App" c:client-ref="client" c:map-ref="loggersMap"/>




    <util:map id="loggersMap" map-class="java.util.HashMap">
        <entry key="INFO" value-ref="consoleLogger"/>
        <entry key="ERROR" value-ref="combinedLogger"/>
    </util:map>


    <bean id="event" class="Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>
    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode">
            <util:constant static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        </property> 
    </bean>


</beans>