<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="consoleLogger" class="ConsoleEventLogger"/>
    <bean id="fileLogger" class="FileEventLogger" init-method="init">
        <constructor-arg value="file.txt"/>
    </bean>
    <bean id="cacheFileLogger" class="CacheFileEventLogger"
          parent="fileLogger" init-method="init" destroy-method="destroy">
        <property name="cacheSize" value="10"/>
    </bean>
    <bean id="combinedLogger" class="CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="fileLogger"/>
                <ref bean="cacheFileLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>